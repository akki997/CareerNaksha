<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CareerPatriFragment"



    android:background="@drawable/backgroundresponsive"

 >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profilebuilder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:id="@+id/cp"
        />
   <android.support.v7.widget.CardView
       android:layout_width="330dp"
       android:layout_height="250dp"
      app:layout_constraintTop_toBottomOf="@id/cp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="10dp"
       android:id="@+id/career"
       app:cardCornerRadius="15dp">
       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:text="Profile Builder | CareerPatri"
               android:textStyle="bold"
               android:id="@+id/profile"

               android:textSize="20sp"
               android:textColor="#0b0b0b"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="140dp"
             android:padding="5dp"
               android:text="A custom profile builder using personas to build user's profile.We collect users data to recommend the best suitable profile based on the users' strengths. Build resume/CV/profile which will get JJN noticed and land you that dream job"
               android:textColor="#0b0b0b"
               android:id="@+id/textpr"
               app:layout_constraintTop_toBottomOf="@id/profile"
               android:textSize="15sp"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@drawable/regbut"
               android:text="Talk to counsellors"
               android:textColor="#fff"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@id/textpr"
               android:textSize="15sp"
               android:id="@+id/patri"/>


       </android.support.constraint.ConstraintLayout>

   </android.support.v7.widget.CardView>



    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>