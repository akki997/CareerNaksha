<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BasicFragment"
    android:background="#15ba9c"
    >
    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:hint="High Schhol/ 10th Grade Subjects"
            android:id="@+id/ee1"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee2"
            android:hint="12th Grade Subjects"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/te"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Bachelor's Degree"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee3"
            android:hint="Field Of Study"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee4"
            android:hint="University/College Name"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee5"
            android:hint="TOEFL Score"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee6"
            android:hint="GRE Score"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee7"
            android:hint="GMAT Score"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee8"
            android:hint="IELTS Score"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/te1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Master's Degree"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee9"
            android:hint="Field of Study"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee10"
            android:hint="University/College Name"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn">
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/ee11"
            android:hint="Additional Qualification"
            android:background="@drawable/btn"
            android:textColorHint="#439fc1"
            android:layout_marginTop="50dp"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/be"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:text="Save And Proceed"
        android:textColor="#439fc1"
        android:background="@drawable/btn"/>

</LinearLayout>