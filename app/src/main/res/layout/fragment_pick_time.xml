<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PickSlotFragment"
    android:background="@drawable/backgroundresponsive">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/ivtime"/>
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/cvtime"
        app:layout_constraintTop_toBottomOf="@id/ivtime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pick Time"
                android:layout_marginLeft="100dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0b0b0b"/>
        </LinearLayout>




    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/iv8"
        app:layout_constraintTop_toBottomOf="@id/cvtime"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@id/cvtime"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="8:00-9:00 AM"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivone"
        app:layout_constraintTop_toBottomOf="@id/iv8"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnone"
        app:layout_constraintTop_toBottomOf="@id/iv8"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="1:30-2:30 PM"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/iv4"
        app:layout_constraintTop_toBottomOf="@id/ivone"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@id/ivone"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="4:30-5:30 PM"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/iv8pm"
        app:layout_constraintTop_toBottomOf="@id/iv4"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btn8pm"
        app:layout_constraintTop_toBottomOf="@id/iv4"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="8:00-9:00 PM"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />




</android.support.constraint.ConstraintLayout>